@model MovieNight

<h1>Movie Night!!!</h1>
<h3>Enter three titles to search for that movies</h3>

<div class="row">
	<div class="col-md-4">
		<form asp-action="MovieNightList">
			<div class="form-group">
				<label asp-for="Movie1" class="control-label"></label>
				<input asp-for="Movie1" class="form-control" />				
			</div>
			<div class="form-group">
				<label asp-for="Movie2" class="control-label"></label>
				<input asp-for="Movie2" class="form-control" />				
			</div>
			<div class="form-group">
				<label asp-for="Movie3" class="control-label"></label>
				<input asp-for="Movie3" class="form-control" />				
			</div>

			<div class="form-group">
				<input type="submit" value="Search" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>